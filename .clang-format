BasedOnStyle: LLVM
IndentWidth: 4
TabWidth: 4
UseTab: Always
BraceWrapping:
  AfterClass: false
  AfterControlStatement: false
  AfterEnum: false
  AfterFunction: false
  AfterNamespace: false
  AfterStruct: false
  AfterUnion: false
  BeforeCatch: false
  BeforeElse: false
  IndentBraces: false
NamespaceIndentation: None
AllowShortFunctionsOnASingleLine: All
AllowShortIfStatementsOnASingleLine: true
AllowShortLoopsOnASingleLine: true
ColumnLimit: 120
DerivePointerAlignment: false
PointerAlignment: Left
SortIncludes: false
